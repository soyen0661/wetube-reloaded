extends ../base

block content
    if errorMessage 
        span.error-message=errorMessage
    form(method="POST",enctype="multipart/form-data").edit-profile__form
        label(for="avatar") Avatar
        input(name="avatar",type="file",id="avatar",accept="image/*")
        input(name="email",placeholder="E-mail",type="email",value=loggedInUser.email,required)
        input(name="name",placeholder="Name",type="text",value=loggedInUser.name,required)
        input(name="username",placeholder="Username",type="text",value=loggedInUser.username,required)
        input(name="location",placeholder="Location",type="text",value=loggedInUser.location)
        input(value="Update Profile",type="submit")
        if !loggedInUser.SocialOnly 
            div.edit-profile__password
            a(href="change-password") Change Password &rarr;

